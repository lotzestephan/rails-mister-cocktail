<div class="container">
  <h1><%= @cocktail.name %></h1>
  <% @cocktail.doses.each do |dose| %>
    <p><% ingredient = @ingredients.find { |ingredient| ingredient.id == dose.ingredient_id } %></p>
    <p><%= ingredient.name %></p>
    <p><%= dose.description %></p>
    <p><%= dose.id %></p>
    <p><%= @cocktail.id %></p>
    <%= link_to "Delete this ingredient", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
  <%= link_to "Back to cocktails", root_path %>
  <%= link_to "Edit this cocktail", edit_cocktail_path(@cocktail) %>
  <%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail) %>
  <%= link_to "Remove this cocktail", cocktail_path(@cocktail), method: :delete, data: { confirm: 'Are you sure?' } %>
</div>

